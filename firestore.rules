rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - Very permissive for testing
    // TODO: Tighten these rules before production launch
    
    // Blueprints - Main collection
    match /blueprints/{blueprintId} {
      // Anyone can read blueprints (for sharing)
      allow read: if true;
      
      // Anyone can create blueprints
      allow create: if true;
      
      // Anyone can update/delete for now (development mode)
      // In production, restrict to: owner only OR anonymous blueprints
      allow update, delete: if true;
    }
    
    // Projects collection (legacy support)
    match /projects/{projectId} {
      // Permissive for development
      allow read, write: if true;
    }
    
    // User profiles (future use)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}