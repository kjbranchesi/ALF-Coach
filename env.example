# ALF Coach Environment Configuration
# Copy this file to .env and fill in your values

# Google AI (Gemini) API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Development Mode
NODE_ENV=development

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_HEALTH_DASHBOARD=true

# Bundle Optimization Feature Flags
# Enable heavy syntax highlighting (default: false for better performance)
VITE_HEAVY_SYNTAX_HIGHLIGHTING=false
# Enable Lottie animations (default: true, set false on low-end devices)
VITE_LOTTIE_ANIMATIONS=true
# Use optimized icon system instead of full lucide-react (recommended: true)
VITE_OPTIMIZED_ICONS=true
# Enable bundle analysis logging (development only)
VITE_BUNDLE_ANALYSIS=false

# Feature Gates
VITE_PDF_EXPORT_ENABLED=false

# Netlify Functions (for production)
NETLIFY_FUNCTIONS_ENDPOINT=/.netlify/functions

# AI proxy configuration (optional)
# If not set, the app will use offline coaching and avoid network calls to the Gemini proxy.
VITE_GEMINI_ENABLED=false
VITE_GEMINI_PROXY_URL=
