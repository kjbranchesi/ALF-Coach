# ALF Coach Environment Variables
# Copy this file to .env.local for local development

# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Gemini API Configuration (Required for AI features)
VITE_GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_KEY=your-gemini-api-key-for-functions

# Feature Flags (Optional)
VITE_ENABLE_NEW_CHATBOT=true
VITE_ENABLE_CREATIVE_PROCESS=true
VITE_ENABLE_ITERATION_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# ===== Cloud-First Architecture Flags (New) =====

# Phase A: Enable cloud-first reads (ReviewScreen loads from Firebase Storage)
# Set to 'true' to test cloud-first architecture
VITE_CLOUD_FIRST_READS=false

# Phase B: Enable cloud-first writes (saves go to Firebase first)
# Requires VITE_CLOUD_FIRST_READS=true
VITE_CLOUD_FIRST_WRITES=false

# Fallback Strategies
VITE_ENABLE_IDB_FALLBACK=true          # Keep IDB as fallback during pilot
VITE_ENABLE_OFFLINE_SNAPSHOT=true      # Compressed localStorage snapshots

# Debug & Observability
VITE_REVIEW_DEBUG=false                # Enable debug UI and verbose logging
VITE_ENABLE_TELEMETRY=true             # Track save/load metrics
VITE_SHOW_SYNC_STATUS=true             # Show sync status indicators

# Error Handling (keep false during pilot for full error visibility)
VITE_SUPPRESS_ERRORS=false
VITE_SUPPRESS_FIREBASE_ERRORS=false

# Environment Settings
VITE_APP_ENV=development
VITE_DEBUG_MODE=false

# API Endpoints (Optional - defaults provided)
VITE_API_BASE_URL=/.netlify/functions
VITE_FIREBASE_REGION=us-central1

# Performance Settings (Optional)
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=false

# Development Settings (Optional)
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true
VITE_PDF_EXPORT_ENABLED=false

# Firebase optional controls
# Set to true to disable background Firebase sync and operate local-first only
VITE_FIREBASE_DISABLED=false

# Gemini AI controls
VITE_GEMINI_ENABLED=true
# If using Netlify function proxy, leave as default
VITE_GEMINI_PROXY_URL=/.netlify/functions/gemini
VITE_GEMINI_MODEL=gemini-2.5-flash-lite

# Netlify Functions default model (optional)
GEMINI_MODEL=gemini-2.5-flash-lite
