# Local Development Environment Variables
# Copy this to .env and fill in your values

# Option 1: If you have the full config as one variable in Netlify
VITE_FIREBASE_CONFIG='{"apiKey":"...","authDomain":"...","projectId":"...","storageBucket":"...","messagingSenderId":"...","appId":"..."}'

# Option 2: If you have individual variables in Netlify
# VITE_FIREBASE_API_KEY=your-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket
# VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
# VITE_FIREBASE_APP_ID=your-app-id

# Enable AI Chat (optional) - now uses secure Netlify function
VITE_USE_AI_CHAT=true
# VITE_GEMINI_API_KEY no longer needed - using secure Netlify function